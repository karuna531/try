@model Category

<form method="post" asp-action="DeletePost">
    <input asp-for="Id" hidden />
    <div class="border p-3 mt-5">
        <div class="row pb-2 ">
            <h2 class="text-primary">Delete Category</h2>
            <hr />
        </div>

        <div class="mb-3">
            <label asp-for="Name">Name</label>
            <input asp-for="Name" disabled class="form-control" />

        </div>

        <div class="mb-3">
            <label asp-for="Description">Display Order</label>
            <input asp-for="Description" disabled class="form-control" />

        </div>


        <button class="btn btn-danger" type="submit" style="width:150px">Delete</button>
        <a asp-controller="Category" asp-action="Index" class="btn btn-secondary" style="width:150px">Back to List</a>
    </div>





</form>
@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial.cshtml" />
    }

}